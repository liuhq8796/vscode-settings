  /* 具有依赖的配置 */

  // 需要安装字体 Fira Code
  // https://github.com/tonsky/FiraCode
  // windows 默认字体：微软雅黑
  "editor.fontFamily": "'Fira Code', '微软雅黑', Consolas, 'Courier New', monospace",
  // 启用/禁用字体连字
  // 配合 Fira Code 字体使用
  "editor.fontLigatures": true,

  // 需要在windows系统种安装 git bash
  // 在 Windows 上使用的默认配置文件
  "terminal.integrated.defaultProfile.windows": "Git Bash",

  // 需要安装颜色主题扩展：One Dark Pro
  // 指定用在工作台中的颜色主题
  "workbench.colorTheme": "One Dark Pro Darker",

  // 需要安装文件图标主题扩展：vscode-icons
  // 指定工作台中使用的文件图标主题
  "workbench.iconTheme": "vscode-icons",

  // 需要安装 ESLint
  // 在保存时运行的代码操作类型
  "editor.codeActionsOnSave": {
    // 控制是否应在文件保存时运行自动修复操作
    "source.fixAll": false,
    // this allows ESLint to auto fix on save
    "source.fixAll.eslint": true,
    // 控制是否应在文件保存时运行"整理 import 语句"操作
    "source.organizeImports": false
  },

  // 需要安装 Prettier
  // 定义一个默认格式化程序, 该格式化程序优先于所有其他格式化程序设置
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // 在保存时格式化文件
  // 配合 editor.defaultFormatter 使用
  "editor.formatOnSave": true,

  /* Extension configs */

  // 设置部分代码为粗体
  "oneDarkPro.bold": true,
  // 设置色彩为 vivid
  "oneDarkPro.vivid": true
}
